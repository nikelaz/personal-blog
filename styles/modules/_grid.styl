.Container
	width: calc(100% - 30px)
	max-width: $grid-container-width
	margin: 0 auto
	@media (max-width: $grid-container-width)
		margin: 0 15px

.Row
	display: flex
	flex-direction: row
	flex-wrap: wrap
	margin-left: ($grid-gutter / -2)
	margin-right: ($grid-gutter / -2)

.Row--middle
	align-items: center

.Row--bottom
	align-items: flex-end

.Col
	padding-left: ($grid-gutter / 2)
	padding-right: ($grid-gutter / 2)
	box-sizing: border-box
	flex: 0 0 auto
	width: auto

.Col--l
	@media screen and (max-width: 960px)
		width: 100% !important
		margin-bottom: 20px

.Col--m
	@media screen and (max-width: 800px)
		width: 100% !important
		margin-bottom: 20px

.Col--s
	@media screen and (max-width: 600px)
		width: 100% !important
		margin-bottom: 20px

for $i in (1..$grid-number-of-columns)
	.Col--{$i}
		width: ($i * (100% / $grid-number-of-columns))

for $i in (1..$grid-number-of-columns)
	.Col--offset-{$i}
		margin-left: ($i * (100% / $grid-number-of-columns))
